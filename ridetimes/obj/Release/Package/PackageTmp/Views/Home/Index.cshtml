@model List<ridetimes.Models.Ride>
<div class="jumbotron" id="hide">
    <div class="col-md-12" id="card">
        <h1 id="marginalize">Disneyland Checklist API</h1>
        <p class="lead">Endpoint for Disneyland Checklist app</p>
        <input class="btn btn-primary btn-lg" type="button" value="Fetch Wait Times"  onclick="location.href='@Url.Action("RefreshTimes", "api/EndPoint")'" /> 
    </div>
</div>
<div class="col-md-12" id="div1">
    <div class="col-md-6">
        <div class="card">
            @if (Model != null)
            {
                <div class="head">
                    <div class="title-name">
                        <p class="title-name-text">Disneyland California</p>
                    </div>
                    <div>
                        <div class="name-head">
                            <p class="text-bold-name">@Html.Raw("Ride")</p>
                        </div>
                        <div class="time-head">
                            <p class="text-bold">@Html.Raw("Wait Time")</p>
                        </div>
                        <div class="status-head">
                            <p class="text-bold">@Html.Raw("Status")</p>
                        </div>
                    </div>

                </div>
                <div class="contain">
                @foreach (var ride in Model)
                {
                    <div class="row">
                        <div class="name">
                            <p class="text-name">@Html.Raw(ride.name)</p>
                        </div>
                        <div class="time">
                            <p class="text">@Html.Raw(ride.waitTime.postedWaitMinutes.ToString())</p>
                        </div>
                        <div class="status">
                            <p class="text">@Html.Raw(ride.waitTime.rollUpStatus)</p>
                        </div>
                    </div>
                }
                </div>
            }

        </div>
    </div>
    <div style="height:30px"/>
    <div class="col-md-6">
        <div class="card">
            @if (Model != null)
            {
                <div class="head">
                    <div class="title-name">
                        <p class="title-name-text">California Adventure</p>
                    </div>
                    <div>
                        <div class="name-head">
                            <p class="text-bold-name">@Html.Raw("Ride")</p>
                        </div>
                        <div class="time-head">
                            <p class="text-bold">@Html.Raw("Wait Time")</p>
                        </div>
                        <div class="status-head">
                            <p class="text-bold">@Html.Raw("Status")</p>
                        </div>
                    </div>
                </div>
                <div class="contain">
                    @foreach (var ride in Model)
                    {
                    <div class="row">
                        <div class="name">
                            <p class="text-name">@Html.Raw(ride.name)</p>
                        </div>
                        <div class="time">
                            <p class="text">@Html.Raw(ride.waitTime.postedWaitMinutes.ToString())</p>
                        </div>
                        <div class="status">
                            <p class="text">@Html.Raw(ride.waitTime.rollUpStatus)</p>
                        </div>
                    </div>
                        }
                    </div>
              }
         </div>
    </div>
</div>
<a class="col-md-12" id="thanks"></a>
@section Scripts
{
    <script>
    window.onbeforeunload = function () {
        $('#hide').remove();
        $("#thanks").append("THANK YOU").delay(20000);
        // For Safari
        return message;
    };
</script>
}



