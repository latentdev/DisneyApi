<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("Disneyland Metrics", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav btn-group">
                <li class="nav-item nav-link btn btn-dark">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item nav-link btn btn-dark">@Html.ActionLink("Disneyland Json", "DisneylandTimes", "api/Endpoint", null, new { @class = "nav-link" })</li>
                <li class="nav-item nav-link btn btn-dark">@Html.ActionLink("California Adventure Json", "CaliforniaAdventureTimes", "api/Endpoint", null, new { @class = "nav-link" })</li>
                @*<li class="nav-item nav-link btn btn-dark">@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
            </ul>
        </div>
    </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LatentDev</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
